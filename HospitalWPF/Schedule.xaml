<Window x:Class="HospitalWPF.Schedule"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Schedule" MinHeight="525" MaxHeight="525" MinWidth="775" MaxWidth="775">
    <Grid>
        <Viewbox Height="330" Width="330" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="30,30,0,0">
            <Calendar x:Name="Calendar" FontFamily="Simplified Arabic" BorderThickness="12,7,12,7" SelectionMode="SingleDate"/>
        </Viewbox>
        <ComboBox HorizontalAlignment="Left" Margin="395,369,0,0" VerticalAlignment="Top" Width="330" SelectionChanged="ComboBox_SelectionChanged"/>
        <DatePicker x:Name="DatePicker" HorizontalAlignment="Left" Margin="38,369,0,0" VerticalAlignment="Top" Width="322"/>
    </Grid>
</Window>
